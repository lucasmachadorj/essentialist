{
  "name": "typescript-starter",
  "version": "1.0.0",
  "description": "A basic typescript app starter for 2023.",
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "start:dev": "npx nodemon -r dotenv/config --exec 'ts-node' src/main.ts",
    "start": "npm run build && node build/main.js",
    "start:db": "ts-node -r dotenv/config src/database/init.ts"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.6.1",
    "@types/pg": "^8.10.2",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.19.2",
    "eslint": "^8.20.0",
    "nodemon": "^2.0.19",
    "onchange": "^7.1.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "run-script-os": "^1.1.6",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "drizzle-orm": "^0.27.0",
    "express": "^4.18.2",
    "jest-cucumber": "^3.0.1",
    "pg": "^8.11.0",
    "uuidv4": "^6.2.13",
    "zod": "^3.21.4"
  }
}
